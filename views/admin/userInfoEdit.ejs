    <link rel='stylesheet' type="text/css" href='../../stylesheets/admin/userInfoEdit.css' />
    <script src="../../javascript/admin/admin.js"></script>
  </head>
  <body>
    <!--네비게이션 바 시작-->
    <nav class="navbar navbar-expand-lg bg-white">
      <div class="container-fluid">
        <a class="navbar-brand" href="./index.html"><img src="">스꾸쁠리</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
          <div class="navbar-nav">
            <a class="nav-link active myCurrentMenu" href="./admin.html">마이페이지</a>
            <a class="nav-link" href="../index.html">로그아웃</a>
          </div>
        </div>
      </div>
    </nav>
    <!--네비게이션 바 종료-->

    <!--회원 가입 부분 시작-->
    <div class="card" id="myEditBox">
        <div class="card-body" style="margin: auto 0;">
            <div id="myEditTitle">회원 정보 수정</div>
            <form id="myEditForm" action="http://localhost:5500/" method="post">
              <div class="myExplain">아이디</div>
              <div id="userIdDiv" class="form-floating mb-3">
                  <input type="text" name="userId" class="form-control" id="floatingInput" onchange="idChecker(this.value)" placeholder="User ID" value="david0417" required>
                  <label for="floatingInput">User ID</label>
              </div>
              <div class="myExplain">비밀번호</div>
              <div id="pwDiv" class="form-floating">
                  <input type="password" name="password" class="form-control" id="floatingPassword" onchange="pwChecker(this.value)" placeholder="Password">
                  <label for="floatingPassword">Password</label>
              </div>
              <div class="myExplain">이름(빈칸 포함 최대 10자)</div>
              <div class="form-floating">
                <input type="text" maxlength="10" name="name" class="form-control" id="floatingName" placeholder="Name" value="안현준" required>
                <label for="floatingName">Name</label>
              </div>
              <div class="myExplain">사용자 유형</div>
              <select class="form-select" name="userType" aria-label="Default select example">
                <option selected value="1">구매자</option>
                <option value="2">판매자</option>
                <option value="3">관리자</option>
              </select>
              <div class="myExplain">계정 상태</div>
              <select class="form-select" name="userStatus" aria-label="Default select example">
                <option selected value="1">활성화</option>
                <option value="2">비활성화</option>
              </select>
              <div>
                  <button type="button" class="btn btn-warning myButton" id="myEditButton" onclick="tryRegister()">회원 정보 수정</button>
              </div>
              <div>
                <button type="button" class="btn btn-danger myButton" id="myDeleteButton" onclick="tryDelete()">회원 삭제</button>
            </div>
            </form>
        </div>
    </div>

  </body>
</html>